{
  "compilerOptions": {
    /* Base Options */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    
    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,

    /* Module Options */
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    
    /* Path aaliases for cleaner imports (optional but recommended) */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    /* Output */
    "outDir": "dist",
    "rootDir": "src"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}